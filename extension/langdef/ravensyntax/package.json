{
   "name": "ravenlang",
   "displayName": "Raven Language",
   "description": "Syntax highlighting for Raven lang",
   "icon": "img/icon.png",
   "publisher": "NavidM",
   "repository": "https://github.com/navid-nm/raven",
   "version": "14.0.0",
   "main": "./src/extension.js",
   "engines": {
      "vscode": "^1.91.0"
   },
   "categories": [
      "Programming Languages"
   ],
   "contributes": {
      "languages": [
         {
            "id": "raven",
            "aliases": [
               "Raven",
               "raven"
            ],
            "extensions": [
               ".rn",
               ".rnm"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Raven Extension Settings",
         "properties": {
            "raven.removeSemicolons": {
               "type": "boolean",
               "default": false,
               "description": "Enable removal of redundant semicolons."
            }
         }
      },
      "grammars": [
         {
            "language": "raven",
            "scopeName": "source.raven",
            "path": "./syntaxes/raven.tmLanguage.json"
         }
      ],
      "configurationDefaults": {
         "[raven]": {
            "editor.formatOnSave": true
         }
      }
   }
}
