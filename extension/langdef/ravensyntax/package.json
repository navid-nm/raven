{
   "name": "ravenlang",
   "displayName": "Raven Language",
   "description": "Syntax highlighting for Raven lang",
   "icon": "img/icon.png",
   "publisher": "NavidM",
   "repository": "https://github.com/navid-nm/raven",
   "version": "11.0.0",
   "main": "./src/extension.js",
   "engines": {
      "vscode": "^1.91.0"
   },
   "categories": [
      "Programming Languages"
   ],
   "contributes": {
      "languages": [
         {
            "id": "raven",
            "aliases": [
               "Raven",
               "raven"
            ],
            "extensions": [
               ".rn",
               ".rnm"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "raven",
            "scopeName": "source.raven",
            "path": "./syntaxes/raven.tmLanguage.json"
         }
      ],
      "keybindings": [
         {
            "command": "raven.formatDocument",
            "key": "ctrl+shift+f",
            "when": "editorLangId == raven"
         }
      ],
      "configurationDefaults": {
         "[raven]": {
            "editor.formatOnSave": true
         }
      }
   }
}
