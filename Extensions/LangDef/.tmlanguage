<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
    <dict>
        <key>name</key>
        <string>Raven</string>
        <key>scopeName</key>
        <string>source.raven</string>
        <key>fileTypes</key>
        <array>
            <string>raven</string>
        </array>
        <key>patterns</key>
        <array>
            <!-- Function definitions -->
            <dict>
                <key>match</key>
                <string>\bfn\b\s+\w+\s*\(.*\)</string>
                <key>name</key>
                <string>keyword.control.raven</string>
            </dict>
            <!-- Keywords -->
            <dict>
                <key>match</key>
                <string>\b(fn|die|const|let)\b</string>
                <key>name</key>
                <string>keyword.control.raven</string>
            </dict>
            <!-- Comments -->
            <dict>
                <key>match</key>
                <string>//.*$</string>
                <key>name</key>
                <string>comment.line.double-slash.raven</string>
            </dict>
            <!-- Strings -->
            <dict>
                <key>match</key>
                <string>"[^"]*"</string>
                <key>name</key>
                <string>string.quoted.double.raven</string>
            </dict>
            <!-- Template Literals -->
            <dict>
                <key>begin</key>
                <string>@\"</string>
                <key>end</key>
                <string>\"</string>
                <key>name</key>
                <string>string.quoted.template.raven</string>
            </dict>
        </array>
    </dict>
</plist>
